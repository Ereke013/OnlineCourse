@model OnlineCourse.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/Main.cshtml";
}
@{
    ViewBag.Title = "Регистрация";
}

<div class="container">

    <div class="col-6 offset-3">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <form action="~/Account/Register" method="post">
            @Html.AntiForgeryToken()
            <div class="card"
                 style="margin-top: 25%;box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 10px 0 rgba(0, 0, 0, 0.19);">
                <h3 class="card-header" style="text-align: center">REGISTRATION </h3>
                <div class="card-body">
                    <div class="form-group">
                        <label> Login: </label>
                        <input type="email" name="Email" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label> Password: </label>
                        <input type="password" name="Password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password: </label>
                        <input type="password" name="ConfirmPassword" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label> Full Name: </label>
                        <input type="text" name="FullName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Регистрация" />
                    </div>
                    <!--            <div class="form-group">-->
                    <!--                <a href="#" class="btn btn-secondary"> < Main page</a>-->
                    <!--            </div>-->
                </div>
            </div>
        </form>
    </div>
</div>

