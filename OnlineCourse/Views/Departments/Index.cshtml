@model IEnumerable<OnlineCourse.Models.Department>

@{
    ViewBag.Title = "Departments";
}

<div class="container ">
    <div class="row mt-5 text-center">
        <h1 style="margin-left: auto;margin-right: auto">Departments</h1>
    </div>
    <div class="row mt-2 text-left">
        <a href="Departments/Create" type="button" class="btn btn-primary" style="">
            +ADD NEW
        </a>
    </div>
    <div class="row mt-4">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Department NAME</th>
                        <th>DETAILS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.DepartmentName</td>
                            <td>
                                <a href="Departments/Details/@item.Id"
                                   class="btn btn-info btn-sm">DETAILS</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

