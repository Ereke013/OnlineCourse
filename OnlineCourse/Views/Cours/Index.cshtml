@model IEnumerable<OnlineCourse.Models.Cours>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>


<div class="container ">
    <div class="row mt-5 text-center">
        <h1 style="margin-left: auto;margin-right: auto">Courses</h1>
    </div>
    <div class="row mt-2 text-left">
        <a href="~/Cours/Create" type="button" class="btn btn-primary" style="">
            +ADD NEW
        </a>
        <input type="text" class="form-control" style="float:right" id="myInput" placeholder="Enter to search..." />
    </div>
    <div class="row mt-5">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Course NAME</th>
                        <th>Level</th>
                        <th>Department</th>
                        <th>Duration</th>
                        <th>DETAILS</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CourseName</td>
                            <td>@item.CourseLevel.LevelName</td>
                            <td>@item.Department.DepartmentName</td>
                            <td>@item.Course_Duration month</td>
                            <td>
                                <a href="Cours/Details/@item.Id"
                                   class="btn btn-info btn-sm">DETAILS</a>
                            </td>
                            @*<td>@Html.DisplayNameFor(model => model.Level.Level_Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Department.Department_Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.CourseDuration) month</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
