@using OnlineCourse.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/Main.cshtml";
}
@{
    ViewBag.Title = "Выполнить вход";
}

<div class="container">
    <div class="col-6 offset-3">
        <form action="~/Account/Login" method="post">
            @Html.AntiForgeryToken()
            <div class="card"
                 style="margin-top: 25%;box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 10px 0 rgba(0, 0, 0, 0.19);">
                <h3 class="card-header" style="text-align: center"><span class="logo_square">CIT</span><span class="logo_green">_DEV</span> </h3>
                <div class="card-body">
                    <div class="form-group">
                        <label> Login: </label>
                        <input type="email" name="Email" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label> Password: </label>
                        <input type="password" name="Password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Sign in" />
                        <a class="btn btn-primary" href="~/Account/Register">Registration</a>
                    </div>
                    <!--            <div class="form-group">-->
                    <!--                <a href="#" class="btn btn-secondary"> < Main page</a>-->
                    <!--            </div>-->
                </div>
            </div>
        </form>
    </div>
</div>

